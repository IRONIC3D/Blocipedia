<div class="container">
  <div class="page-header">
    <h1>All of the wikis</h1>
  </div>

  <% if policy(Wiki.new).create? %>
    <%= link_to "Post a new wiki", new_wiki_path, class: "btn btn-primary" %>
  <% end %>

  <hr>

  <% @wikis.each do |wiki| %>
    <div class="wiki row">
      <div class="spanwiki">
        <strong><%= wiki.user.full_name %></strong>
        <h3><%= markdown wiki.title %></h3> 
        <div class="meta">
          <%= link_to time_ago_in_words(wiki.created_at) + " ago", wiki %>
          <span class="admin">
            <% if policy(@wiki).edit? %>
            | <%= link_to "Edit", edit_wiki_path(wiki) %> | 
            <% end %>
            <%= link_to "Delete", wiki, method: :delete, data: {confirm: "Are You Sure?"} %>
          </span>
        </div>
      </div>
    </div>
  <% end %>
</div>